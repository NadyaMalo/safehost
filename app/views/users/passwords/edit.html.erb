
<div class="page-header">
  <h1>Change your password</h1>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group row">
    <%= f.label :password, "New password", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :password_confirmation, "Confirm new password", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

    <div class="form-group actions">
      <%= f.submit "Change my password", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

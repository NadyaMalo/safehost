<%- model_class = Host -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:postal_code) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:optimal_no_guests) %></th>
      <th><%= model_class.human_attribute_name(:max_sleeps) %></th>
      <th><%= model_class.human_attribute_name(:max_duration) %></th>
      <th><%= model_class.human_attribute_name(:sleep_conditions) %></th>
      <th><%= model_class.human_attribute_name(:which_guests) %></th>
      <th><%= model_class.human_attribute_name(:which_hosts) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:languages) %></th>
      <th><%= model_class.human_attribute_name(:other_comments) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= link_to host.id, host_path(host) %></td>
        <td><%= host.user_id %></td>
        <td><%= host.address %></td>
        <td><%= host.postal_code %></td>
        <td><%= host.city %></td>
        <td><%= host.country %></td>
        <td><%= host.optimal_no_guests %></td>
        <td><%= host.max_sleeps %></td>
        <td><%= host.max_duration %></td>
        <td><%= host.sleep_conditions %></td>
        <td><%= host.which_guests %></td>
        <td><%= host.which_hosts %></td>
        <td><%= host.description %></td>
        <td><%= host.languages %></td>
        <td><%= host.other_comments %></td>
        <td><%=l host.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      host_path(host), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_host_path(host), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      host_path(host),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_host_path,
            :class => 'btn btn-primary' %>
